from random import  randint
print('Введите длинну пароля')
lenpas = int(input())
def randompassword(x, special, down, up, numbers):
    symbol = ''
    if special == 1:
        symbol += '!@#$%^&*'
    if down == 1:
        symbol += 'abcdefghijklmnopqrstuvwxyz'
    if up == 1:
        symbol += 'QWERTYUIOPASDFGHJKLZXCVBNM'
    if numbers == 1:
        symbol += '1234567890'

    if len(symbol) == 0:
        return 'Невозможно сгенерировать такой пароль'

    result = ''
    for i in range(x):
        symbol_random = randint(0,len(symbol) - 1)
        result += symbol[symbol_random]
    return result
print('Введите 1, если хотите дать возможность использовать нижний регистр или любую другую цифру если не хотите')
down = int(input())
print('Введите 1, если хотите дать возможность использовать спец символы или любую другую цифру если не хотите')
special = int(input())
print('Введите 1, если хотите дать возможность использовать цифры или любую другую цифру если не хотите')
numbers = int(input())
print('Введите 1, если хотите дать возможность использовать верхний регистр или любую другую цифру если не хотите')
up = int(input())
print(randompassword(lenpas, special, down, up, numbers))

